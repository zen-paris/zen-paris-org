---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <!-- Main dropdown button -->
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-gray hover:text-teal-200"
    >
      <span>{title}</span>
      <svg
        class="w-3 h-3 ml-1 text-gray group-hover:text-teal-200"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </button>

    <!-- Dropdown items -->
    <DropdownItems
      class="dropdown-menu absolute mt-2 bg-teal-600 rounded-lg shadow-lg w-48 z-50"
    >
      <ul class="flex flex-col">
        {children.map((child) => (
          <li>
            <a
              href={child.path}
              class="block px-4 py-2 text-gray hover:text-teal-200 hover:bg-teal-700 rounded"
            >
              {child.title}
            </a>
          </li>
        ))}
      </ul>
    </DropdownItems>
  </DropdownContainer>
</li>
