---
import Analytics from '@vercel/analytics/astro';
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import InfoBox from "@/components/info-box.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";

const ctaLink = "/initiation";

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL("/opengraph.webp", Astro.site).toString();

const makeTitle = title ? `${title} Méditation zen | ` : "Dojo zen de Paris";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />

    <SEO
      title={makeTitle}
      description="Pratique de la méditation zazen traditionnelle."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Dojo zen de Paris`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Dojo zen de Paris",
        },
      }}
    />
  </head>
  <body class="bg-white text-gray-900">


    <Navbar />

    <main class="mx-auto max-w-[1300px] flex flex-col lg:flex-row gap-8 px-4 py-8">
      <div class="flex-1">
        <slot /> <!-- Page content -->
      </div>

      <aside class="lg:w-1/3">
        <InfoBox /> <!-- Info box appears on all pages -->
      </aside>
    </main>

    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>

    <!-- CTA Button -->
    <div id="cta-button" class="fixed bottom-6 right-6 hidden z-50">
      <a
        href={ctaLink}
        class="bg-teal-600 text-white px-4 py-2 rounded-full shadow-lg hover:bg-orange-700 transition text-sm font-medium"
      >
        Initiation libre
      </a>
    </div>

    <!-- CTA Script (client-only) -->
    <script is:client>
      document.addEventListener("DOMContentLoaded", () => {
        const ctaButton = document.getElementById("cta-button");
        const hasSeenCTA = localStorage.getItem("ctaSeen") === "true";

        if (hasSeenCTA) {
          ctaButton.remove();
          return;
        }

        const toggleCTA = () => {
          const scrollTop = window.scrollY || document.documentElement.scrollTop;
          const docHeight = document.documentElement.scrollHeight - window.innerHeight;
          const scrollPercent = (scrollTop / docHeight) * 100;

          if (scrollPercent > 50) {
            ctaButton.classList.remove("hidden");
            localStorage.setItem("ctaSeen", "true");
            window.removeEventListener("scroll", toggleCTA);
          }
        };

        window.addEventListener("scroll", toggleCTA);
      });
    </script>

    <Footer />

    <Analytics />
  </body>
</html>
