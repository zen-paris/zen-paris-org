---
import Analytics from '@vercel/analytics/astro';
import  SpeedInsights  from "@vercel/speed-insights/astro";
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import InfoBox from "@/components/info-box.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";

const ctaLink = "/meditation-zen/initiation-au-zen/";

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL("/opengraph.webp", Astro.site).toString();

const makeTitle = title ? `${title} Méditation zen | ` : "Zen Paris";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />

    <SEO
      title={makeTitle}
      description="Pratique de la méditation zazen traditionnelle."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Zen Paris`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Zen Paris",
        },
      }}
    />
  </head>
  <body class="bg-white text-gray-900">

    <Navbar />

    <!-- Hero Video -->
    <div class="w-full overflow-hidden">
      <video
        id="hero-video"
        src="/path/to/your/video.mp4"
        autoplay
        muted
        loop
        playsinline
        class="w-full h-[500px] object-cover transition-all duration-500"
      ></video>
    </div>

    <main class="mx-auto max-w-[1300px] flex flex-col lg:flex-row gap-8 px-4 py-8">
      <div class="flex-1">
        <slot /> <!-- Page content -->
      </div>

      <aside class="lg:w-1/3">
        <InfoBox /> <!-- Info box appears on all pages -->
      </aside>
    </main>

    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>

    <!-- CTA Button -->
    <div id="cta-button" class="fixed bottom-6 right-6 hidden z-50">
      <a
        href={ctaLink}
        class="bg-sky-600 text-white px-4 py-2 rounded-full shadow-lg hover:bg-orange-700 transition text-sm font-medium"
      >
        Initiation
      </a>
    </div>

    <!-- Scripts -->
    <script is:client>
      document.addEventListener("DOMContentLoaded", () => {
        // --- CTA Button ---
        const ctaButton = document.getElementById("cta-button");
        const hasSeenCTA = localStorage.getItem("ctaSeen") === "true";

        if (hasSeenCTA) {
          ctaButton?.remove();
        } else {
          const toggleCTA = () => {
            const scrollTop = window.scrollY || document.documentElement.scrollTop;
            const docHeight = document.documentElement.scrollHeight - window.innerHeight;
            const scrollPercent = (scrollTop / docHeight) * 100;

            if (scrollPercent > 50) {
              ctaButton?.classList.remove("hidden");
              localStorage.setItem("ctaSeen", "true");
              window.removeEventListener("scroll", toggleCTA);
            }
          };
          window.addEventListener("scroll", toggleCTA);
        }

        // --- Shrink Hero Video on Scroll ---
        const video = document.getElementById("hero-video");
        if (video) {
          const shrinkVideo = () => {
            if (window.scrollY > 0) {
              video.style.height = "200px";
              window.removeEventListener("scroll", shrinkVideo); // never revert
            }
          };
          window.addEventListener("scroll", shrinkVideo);
        }
      });
    </script>

    <Footer />

    <Analytics />
  </body>
</html>
